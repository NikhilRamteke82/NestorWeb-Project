<% layout('layouts/boilerplate') -%>

    <div class="row">
        <div class="col-8 offset-2">
            <h3>Create New Listing</h3>

            <form method="post" action="/listings">
                <div class="mb-3">
                    <label for="title" class="form-lable">Title</label>
                    <input name="listing[title]" placeholder="Enter Title" type="text" class="form-control">
                </div>

                <div class="mb-3">
                    <label for="description" class="form-lable">Description</label>
                    <textarea name="listing[description]" placeholder="Enter Description" class="form-control"></textarea></textarea>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-lable">Image</label>
                    <input name="listing[image]" placeholder="Enter Image URL/Link" type="text" class="form-control">
                </div>

                <div class="mb-3">
                    <label for="price" class="form-lable">Price</label>
                    <input name="listing[price]" placeholder="Entr Price" type="number" class="form-control">
                </div>

                <div class="mb-3">
                    <label for="location" class="form-lable">Location</label>
                    <input name="listing[location]" placeholder="Enter Location" type="text" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="country" class="form-lable">Country</label>
                    <input name="listing[country]" placeholder="Enter Country" type="text" class="form-control">
                </div>


                <button class="btn btn-dark">Add</button>
            </form>
        </div>
    </div>