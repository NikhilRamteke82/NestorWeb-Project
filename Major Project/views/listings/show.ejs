<% layout('layouts/boilerplate') -%>

    <div class="row mt-3">
        <div class="col-md-8 offset-md-2">
            <h3><b><%= listing.title %></b></h3>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-8 offset-md-2">
            <div class="card show-card">
                <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
                <div class="card-body">
                    <p class="card-text">
                        <%= listing.description %> <br> &#8377;
                            <%= listing.price.toLocaleString("en-IN") %> <br>
                                <%= listing.location %> <br>
                                    <%= listing.country %>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-8 offset-md-2 d-flex justify-content-start gap-2">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning">Edit</a>

            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8 offset-md-2">
            <h4>Leave a Review</h4>
            <form method="POST" action="/listings/<%= listing._id %>/reviews">
                <div class="mb-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
                </div>
                <div class="mb-3">
                    <label for="comment" class="form-label">Comments</label>
                    <textarea name="review[comment]" id="comment" rows="3" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>